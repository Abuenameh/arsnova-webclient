{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run application",
      "type": "shell",
      "command": "yarn start:particify",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build application",
      "type": "shell",
      "command": "yarn build:particify",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "yarn test",
      "group": {
        "kind": "test"
      }
    }
  ]
}
