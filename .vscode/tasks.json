{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install dependencies",
      "type": "shell",
      "command": "yarn"
    },
    {
      "label": "Run project",
      "type": "shell",
      "command": "yarn start",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Install dependencies"]
    },
    {
      "label": "Build project",
      "type": "shell",
      "command": "yarn build",
      "group": {
        "kind": "build"
      },
      "dependsOn": ["Install dependencies"]
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "yarn test",
      "group": {
        "kind": "test"
      },
      "dependsOn": ["Install dependencies"]
    }
  ]
}
